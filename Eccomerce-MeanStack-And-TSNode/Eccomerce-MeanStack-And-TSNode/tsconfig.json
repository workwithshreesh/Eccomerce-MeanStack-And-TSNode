{
  "compilerOptions": {
    "target": "ES6",                          // Modern JavaScript target
    "module": "commonjs",                     // CommonJS modules for Node.js
    "strict": true,                           // Enable strict mode
    "esModuleInterop": true,                  // Enable compatibility for ES modules
    "experimentalDecorators": true,           // Enable experimental decorators
    "emitDecoratorMetadata": true,            // Emit metadata for decorators
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing for file names
    "outDir": "./dist",                       // Output directory for compiled JS
    "rootDir": "./src",                        // Root directory for TypeScript files
  },
  "include": ["src/**/*.ts"],                  // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]                  // Exclude node_modules
}
